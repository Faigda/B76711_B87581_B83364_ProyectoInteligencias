<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/creme"
    tools:context=".MainActivity">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userLabel"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:text="Usuario," />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleLabel"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:layout_marginBottom="5dp"
        android:text="su inteligencia es:" />

    <ImageView
        android:id="@+id/intelligenceImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brainexplosion" />

    <TextView
        android:id="@+id/intelligenceLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inteligencia"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        android:textStyle="italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@color/lightgreen">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hace match con:"
                android:id="@+id/nameLabel"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                android:textSize="27sp"/>

            <TextView
                android:id="@+id/match1Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="8dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/match2Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="8dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/match3Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="8dp"
                android:textSize="15sp"
                android:text=""
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/match4Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="8dp"
                android:textSize="15sp"
                android:text=""
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/match5Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="8dp"
                android:textSize="15sp"
                android:text=""
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/match6Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="8dp"
                android:textSize="15sp"
                android:text=""
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/match7Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15sp"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/black"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/restartButton"
        android:text="Reiniciar Test"
        android:textSize="25sp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/purple"
        android:textColor="@color/black"/>


</LinearLayout>